generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_STRING")
}
model User {
  id            String     @id @default(uuid()) //
  email         String     @unique
  password      String
  name          String
  photo         String?
  rooms         Room[]
  chats         Chat[]
}

model Room {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  createdAt   DateTime  @default(now()) //automatically inserts the current date
  adminId     String
  admin       User      @relation(fields: [adminId], references: [id]) //foreign key to User table : adminID is linked to id of User table  
  chats       Chat[]
}

model Chat {
  id        Int       @id  @default(autoincrement())
  roomId    Int
  message   String
  userId    String
  room      Room      @relation(fields: [roomId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}